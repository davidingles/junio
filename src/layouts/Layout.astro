---
import Theme from '../components/Theme.astro'
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Astro description'
		/>
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body>
		<Theme />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
		color: light-dark(black, #999);
		background-color: light-dark(#999, #333);
	}
	html {
		font-family: system-ui, sans-serif;
	}
</style>
